{
  "name": "panku-emr",
  "description": "电子病历",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "build": "vue-tsc -b && vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write ./**/*.{js,jsx,ts,tsx,less,css,vue}",
    "prepare": "husky",
    "lint:lint-staged": "lint-staged",
    "commit": "cz",
    "reinstall": "rimraf node_modules pnpm-lock.yaml && pnpm install",
    "update-local-deps": "pnpm install --force"
  },
  "dependencies": {
    "@arco-design/color": "^0.4.0",
    "@arco-design/web-vue": "^2.57.0",
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-vue": "^0.1.3",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@hufe921/canvas-editor-plugin-floating-toolbar": "^0.0.4",
    "@panku/canvas-editor": "file:./libs/canvas-editor",
    "@vxe-ui/plugin-render-arco": "^4.0.4",
    "JSZip": "^3.10.1",
    "dayjs": "^1.11.13",
    "jspdf": "^3.0.1",
    "nanoid": "^5.1.5",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.4.1",
    "vue": "^3.5.18",
    "vue-codemirror6": "^1.3.22",
    "vue-router": "^4.5.1",
    "vxe-table": "^4.15.5"
  },
  "devDependencies": {
    "@arco-plugins/vite-vue": "^1.4.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@nabla/vite-plugin-eslint": "^2.0.6",
    "@types/node": "^22.17.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.5.1",
    "eslint": "^9.32.0",
    "eslint-plugin-vue": "^10.3.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "less": "^4.4.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-vue-components": "^28.8.0",
    "vite": "^7.0.6",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-lazy-import": "^1.0.7",
    "vite-plugin-mkcert": "^1.17.8",
    "vite-plugin-svg-icons": "^2.0.1",
    "vue-tsc": "^2.2.12"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,less,styl,html}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  }
}
